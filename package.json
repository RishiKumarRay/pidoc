{
  "name": "piral-docs-tools-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "author": "smapiot",
  "license": "MIT",
  "homepage": "https://github.com/smapiot/piral-docs-tools#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smapiot/piral-docs-tools.git"
  },
  "bugs": {
    "url": "https://github.com/smapiot/piral-docs-tools/issues"
  },
  "scripts": {
    "ci:version": "node tools/changelog-version.js",
    "ci:prerelease": "npx lerna publish $(yarn --silent ci:version)-pre.${{ github.run_number }} --no-git-tag-version --tag next",
    "ci:release": "npx lerna publish $(yarn --silent ci:version) --tag latest"
  },
  "devDependencies": {
    "lerna": "^3.10.7"
  }
}
